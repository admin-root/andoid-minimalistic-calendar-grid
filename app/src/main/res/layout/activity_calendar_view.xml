            android:id="@+id/month_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/year_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickYear"
            android:text="2014" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateOnly="true" />

